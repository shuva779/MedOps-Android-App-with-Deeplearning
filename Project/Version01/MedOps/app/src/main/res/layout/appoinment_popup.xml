<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="10sp"
    android:background="@drawable/bglog1"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="@string/popup_title"
            android:textColor="@color/dark_blue"
            android:textSize="12sp"
            android:layout_toStartOf="@+id/cross"
            android:layout_marginTop="10sp"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/cross"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentEnd="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/cross_b"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="September 19"
        android:textColor="@color/dark_blue"
        android:textSize="16sp"
        android:padding="8sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/time_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eczar_semibold"
            android:gravity="center"
            android:text="19"
            android:background="@drawable/rectangle_14"
            android:textColor="@color/dark_blue"
            android:textSize="28sp"
            android:padding="8sp"
            android:layout_marginEnd="15sp"/>
        <TextView
            android:id="@+id/time_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_14"
            android:fontFamily="@font/eczar_semibold"
            android:gravity="center"
            android:padding="8sp"
            android:text="45"
            android:textColor="@color/dark_blue"
            android:textSize="28sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/confirm_appoin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="25sp"
        android:background="@drawable/rectangle_confirm">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/confirm_Appoinment"
            android:textColor="@color/dark"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>