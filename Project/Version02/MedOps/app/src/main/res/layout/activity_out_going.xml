<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_white"
    tools:context=".Activity.OutGoingActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutBgImg"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:gravity="center"
        android:visibility="gone">
        <include
            layout="@layout/roundimage"/>
    </RelativeLayout>
<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="calling..."-->
<!--        android:gravity="center"-->
<!--        android:layout_below="@+id/imageLayout"-->
<!--        android:fontFamily="@font/poppins"-->
<!--        android:textSize="14sp"-->
<!--        android:layout_marginTop="20sp"-->
<!--        android:textColor="@color/dark_blue"/>-->
    <RelativeLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background"
        android:padding="5sp">
        <TextView
            android:id="@+id/callernamed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="20sp"
            android:padding="15sp"
            android:textColor="@color/dark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="calling....."
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
            android:textColor="@color/dark_blue"
            android:padding="15sp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bglog"
        android:orientation="horizontal"
        android:paddingStart="20sp"
        android:paddingTop="10sp"
        android:paddingEnd="20sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/micOnIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15sp"
            android:layout_marginEnd="20sp"
            android:src="@drawable/ic_mic"/>
        <ImageView
            android:id="@+id/endCall"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:src="@drawable/ic_callend"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="40sp"/>
        <ImageView
            android:id="@+id/videoOnIcon"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:src="@drawable/ic_videoicon"
            android:padding="17sp"/>
    </LinearLayout>
</RelativeLayout>