<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_redis">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15sp">
            <include layout="@layout/roundimage"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/profilefullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5sp"
                    android:layout_marginBottom="10sp"
                    android:textColor="@color/dark"
                    android:text=""
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/my_asset"
            android:elevation="5dp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/balanceTk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20sp"
                    android:paddingEnd="10sp"
                    android:text=""
                    android:textColor="@color/dark"
                    android:textSize="40sp"
                    android:fontFamily="@font/eczar_medium"
                    android:drawableEnd="@drawable/ic_tk"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:background="@drawable/moneybutton"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/addmoney"
                    android:layout_width="0sp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text=""
                    android:textColor="@color/dark_blue"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_light"/>
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text=""
                    android:textColor="@color/dark_blue"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_light"/>
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background"
                android:elevation="5sp"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:paddingEnd="2sp"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp">
                <TextView
                    android:id="@+id/personalinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/dark_blue"
                    android:gravity="center_vertical"
                    android:text="Personal Info"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins"
                    android:drawableEnd="@drawable/pen"/>
                <TextView
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text=""
                    android:textColor="@color/dark_blue"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_light"/>
                <TextView
                    android:id="@+id/dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:text=""
                    android:textColor="@color/dark_blue"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_light"/>

                <TextView
                    android:id="@+id/bloodgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text=""
                    android:textColor="@color/dark_blue"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_light"/>
                <TextView
                    android:id="@+id/nid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:text=""
                    android:textColor="@color/dark_blue"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_light"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/height"
                        android:layout_width="0sp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:text=""
                        android:textColor="@color/dark_blue"
                        android:gravity="center_vertical"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_light"/>
                    <TextView
                        android:id="@+id/weight"
                        android:layout_width="0sp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:text=""
                        android:textColor="@color/dark_blue"
                        android:gravity="center_vertical"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_light"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/professionallayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background"
                android:elevation="5sp"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:paddingEnd="2sp"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/professionalinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/dark_blue"
                    android:gravity="center_vertical"
                    android:text="Professional Info"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins"
                    android:drawableEnd="@drawable/pen"/>
                <TextView
                    android:id="@+id/designation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text=""
                    android:textColor="@color/dark_blue"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_light"/>
                <TextView
                    android:id="@+id/workingin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:text=""
                    android:textColor="@color/dark_blue"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_light"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:padding="5sp">
                    <TextView
                        android:id="@+id/workingExperience"
                        android:layout_width="0sp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:text=""
                        android:textColor="@color/dark_blue"
                        android:gravity="center_vertical"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_light"/>
                    <TextView
                        android:id="@+id/bmdcid"
                        android:layout_width="0sp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:text=""
                        android:textColor="@color/dark_blue"
                        android:gravity="center_vertical"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_light"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/consulthour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:text=""
                    android:textColor="@color/dark_blue"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_light"/>
                <TextView
                    android:id="@+id/consultfee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text=""
                    android:textColor="@color/dark_blue"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_light"/>
                <TextView
                    android:id="@+id/consultdays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:text=""
                    android:textColor="@color/dark_blue"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_light"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background"
                android:elevation="5sp"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:paddingEnd="2sp"
                android:paddingBottom="8sp">
                <TextView
                    android:id="@+id/editaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/dark_blue"
                    android:gravity="center_vertical"
                    android:text="Address"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins"
                    android:drawableEnd="@drawable/pen"/>
                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:text=""
                    android:textColor="@color/dark_blue"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins"
                    android:drawableStart="@drawable/ic_address"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background"
                android:elevation="5sp"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:paddingEnd="2sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/dark_blue"
                    android:gravity="center_vertical"
                    android:text="Email"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins"/>
                <TextView
                    android:id="@+id/profileemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text=""
                    android:textColor="@color/dark_blue"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins"
                    android:drawableStart="@drawable/ic_email"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background"
                android:elevation="5sp"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:paddingEnd="2sp"
                android:layout_marginBottom="10sp">
                <TextView
                    android:id="@+id/editphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10sp"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/dark_blue"
                    android:gravity="center_vertical"
                    android:text="Phone Number"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins"
                    android:drawableEnd="@drawable/pen"/>
                <TextView
                    android:id="@+id/phonenum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text=""
                    android:textColor="@color/dark_blue"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins"
                    android:drawableStart="@drawable/ic_phone"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>